{
   "manifest_version": 3,
   "name": "Lingomon",
   "version": "1.4",
   "description": "Gotta catch em all!",
   "permissions": ["contextMenus", "notifications", "storage"],
   "action": {
     "default_popup": "popup.html",
     "default_title": "View your WordDex"
   },
   "background": {
     "service_worker": "background.js"
   },
   "icons": {
    "16": "lingomon.png",
    "32": "lingomon.png",
    "48": "lingomon.png",
    "128": "lingomon.png"
   },
   "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "js": ["content.js"]
     }
   ],
   "host_permissions": [
    "https://api.dictionaryapi.dev/*"
   ]

}